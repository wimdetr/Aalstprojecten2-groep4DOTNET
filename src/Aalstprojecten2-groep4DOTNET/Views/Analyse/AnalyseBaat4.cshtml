@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.AnalyseViewModels.AnalyseBaat4ViewModel

@{
    ViewData["Title"] = "Kairos";
}

<link rel="stylesheet" href="~/css/AnalyseBekijken.css" />
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<link rel="stylesheet" href="~/css/Baat1.css" />
<link rel="stylesheet" href="~/css/ShowHideFormulier.css" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script language="JavaScript" type="text/javascript" src="~/js/tableScriptBaten.js"></script>
<script src="~/js/ShowHideFormulier.js"></script>
<script src="~/js/KostEnBaatVulIn/Baat4.js"></script>

<div class="row">
    <div class="col-md-3">
        <h2><a asp-controller="Analyse" asp-action="WerkgeverAanpassen">@ViewData["werkgever"]</a></h2>
    </div>
    <div class="col-md-6 text-center">
        <h2>Baten</h2>
    </div>
    <div class="col-md-3 text-right">
        <div class="btn-group marginTopKlein" role="group">
            <a asp-controller="Analyse" asp-action="AnalyseKost" class="btn btn-primary btn-lg"><img src="~/images/iconen/kosten_wit.png" class="fototjeKosten" /></a>
            <a asp-controller="Analyse" asp-action="AnalyseOverzicht" class="btn btn-primary btn-lg"><img src="~/images/iconen/analyse_wit.png" class="fototjeKosten" /></a>
            <a asp-controller="Analyse" asp-action="AnalyseBaat1" class="btn btn-primary btn-lg"><img src="~/images/iconen/baten_wit.png" class="fototjeKosten" /></a>
        </div>
    </div>
</div>
<div>
    <h5></h5>
    <hr />
</div>

<div class="container">

    <div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseBaat1">
                        <h4 class="list-group-item-heading">Stap 1</h4>
                        <p>Lonen die vervangen worden</p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseBaat2">
                        <h4 class="list-group-item-heading">Stap 2</h4>
                        <p>Uitzendkrachten, overuren en uitbesteede zaken</p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseBaat3">
                        <h4 class="list-group-item-heading">Stap 3</h4>
                        <p>Subsidies, extra productiviteit en omzet verlies</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-controller="Analyse" asp-action="AnalyseBaat4">
                        <h4 class="list-group-item-heading">Stap 4</h4>
                        <p>Andere mogelijke besparingen</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="col-md-12 well text-center">
            <div class="Blok1 text-center">
                <h3 class="text-left">1. Aan welke besparingen kan er nog meer gedacht worden? Vul de bedragen in per jaar?</h3>
                <table class="table table-striped text-left test marginBottomGroot">
                    <thead class="achtergrondKleurVanDeTabelHeader">
                        <tr>
                            <th class="kleineBreedte"></th>
                            <th>Type Besparing</th>
                            <th>Jaarbedrag</th>
                            <th class="kleineBreedte"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 1; i <= Model.AantalLijnenLijst; i++)
                        {
                            <tr id="tr_0">
                                <td>@i.</td>
                                <td>@Model.Lijst[i - 1].Beschrijving</td>
                                <td>@Model.Lijst[i - 1].Bedrag.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-controller="Analyse" asp-action="AnalyseBaat4RijAanpassen" asp-route-id="@Model.Lijst[i - 1].KostId" class="glyphicon glyphicon-edit marginRechtsEnFloatLeft"></a>
                                    <a asp-controller="Analyse" asp-action="AnalyseBaat4RijVerwijderen" asp-route-id="@Model.Lijst[i - 1].KostId" class="glyphicon glyphicon-remove"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                
                <button class="btn btn-primary btn-lg text-center toverknop marginBenedenMidden">Nieuwe Besparing</button>
                <form asp-controller="Analyse" asp-action="AnalyseBaat4" method="post" class="invulgegevens @(Model.ToonGroep1?(Model.BevatFout?"toonFormulier":"toonFormulier animated zoomIn"):"verbergFormulier")">

                    <h3>Gegevens van de nieuwe besparing</h3>
                    <input asp-for="VolgendeLijn" type="hidden" />
                    <span asp-validation-for="VolgendeLijn" class="text-danger"></span>
                    <div class="invulveldjes1 opmaakInvulveldjes">
                        <div class="form-group opmaakFormGroup">
                            <input asp-for="Beschrijving" id="type" class="form-control" placeholder="Type Besparing" />
                            <span asp-validation-for="Beschrijving" class="text-danger"></span>
                        </div>
                        <div class="form-group floatLinks">
                            <input asp-for="Bedrag" id="jaarBedrag" class="form-control" placeholder="Jaarbedrag" />
                            <span asp-validation-for="Bedrag" class="text-danger foutMelding"></span>
                        </div>
                    </div>

                    <a id="vulInKnop" class="btn btn-primary btn-lg text-center">Vul In</a>
                    <a class="btn btn-primary btn-lg text-center annuleerKnop">Annuleer</a>
                </form>

            </div>
            <a asp-controller="Analyse" asp-action="AnalyseBaat3" class="btn btn-primary btn-lg">Vorige</a>
            <a asp-controller="Analyse" asp-action="AnalyseOverzicht" class="btn btn-primary btn-lg">Overzicht</a>
        </div>
    </div>
</div>