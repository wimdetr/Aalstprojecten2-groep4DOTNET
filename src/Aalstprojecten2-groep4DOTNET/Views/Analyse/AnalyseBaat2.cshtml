                        <tr>
                            <td class="opmaakKnopje toverknop" style="padding-top:0;">
                                <div class="SpecialeHoogteDoorNielsGemaakt">
                                    <a class="text-center marginBenedenMidden"><img src="~/images/iconen/plus.png" class="fototjeKosten" /></a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>


                <form method="post" class="invulgegevens @(Model.ToonGroep2?(Model.BevatFout?"toonFormulier":"toonFormulier animated zoomIn"):"verbergFormulier")">
                    <div class="row">
