    ViewData["Title"] = "Kairos";
}

<link rel="stylesheet" href="~/css/AnalyseBekijken.css" />
<link rel="stylesheet" href="~/css/Baat1.css" />
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script language="JavaScript" type="text/javascript" src="~/js/tableScript.js"></script>

<div class="row">
    <div class="col-md-9">
        <h2>Nieuwe Analyse - Kosten</h2>

    </div>
    <div class="col-md-3" style="padding-top:20px;">
        <input type="image" style="margin-left: 20px; max-height:30px; max-width: 50px; min-height: 30px; float:right;" src="~/images/iconen/overview.png" />
        <input type="image" style="max-height:30px; max-width: 50px; min-height: 30px; float:right;" src="~/images/iconen/save.png" />
    </div>
</div>
<div>
    <h5></h5>
    <hr />
</div>

<div class="container">
    <div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active">
                    <a asp-controller="Analyse" asp-action="AnalyseKost">
                        <h4 class="list-group-item-heading">Stap 1</h4>
                        <p>Nieuwe functies</p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseKost2">
                        <h4 class="list-group-item-heading">Stap 2</h4>
                        <p class="list-group-item-text">Kosten aan maatwerkbedrijf via enclave of onderaanneming</p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseKost3">
                        <h4 class="list-group-item-heading">Stap 3</h4>
                        <p class="list-group-item-text">Extra structureel en materiaal huur</p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Analyse" asp-action="AnalyseKost4">
                        <h4 class="list-group-item-heading">Stap 4</h4>
                        <p class="list-group-item-text">Extra structureel en materiaal huur</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

        <div class="col-xs-12">
            <div class="col-md-12 well text-center">
                <div class="Blok1 text-center">
                    <h3 class="text-left">1. Welke nieuwe functies zet u in?</h3>
                    <table class="table table-bordered text-left" id="tableAddRow" style="margin-bottom: 55px;">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Functie</th>
                                <th>Aantal Uren Per Week</th>
                                <th>Bruto Maandloon Fulltime</th>
                                <th>Doelgroep</th>
                                <th>Vlaamse Ondersteunings Premie</th>
                                <th>Aantal Maanden IBO</th>
                                <th>Totale Productiviteits-Premie IBO</th>
                                <th></th>
                                @*<th style="width:10px"><span class="glyphicon glyphicon-plus addBtn"></span></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="tr_0">
                                <td>1.</td>
                                <td>Ruitenwasser</td>
                                <td>30 €</td>
                                <td>2400 €</td>

                                <td>
                                    Werknemers < 25 jaar laag geschoold
                                </td>
                                <td>
                                    40%
                                </td>
                                <td>12</td>
                                <td>1500</td>
                                <td>
                                    <button type="button" class="glyphicon glyphicon-edit" style="margin-right:5px;" />
                                    <button class="glyphicon glyphicon-remove" />
                                </td>
                        </tbody>
                    </table>

                    <button class="btn btn-primary btn-lg text-center" style="margin-bottom:20px;">Nieuwe Functie</button>

                    <div class="volledigeInvulveldjes" style="width:100%; height:200px;">
                        <h3>Gegevens van de nieuwe functie</h3>
                        <div class="invulveldjes1" style="width:100%; height: 100px; float:left; padding-left:13%;">
                            <input type="text" id="Functie" class="form-control" placeholder="Nieuwe functie" style="float:left;" />
                            <input type="number" id="UrenPerWeek" class="form-control" placeholder="Aantal uren per week" style="float:left; margin-left:50px;" />
                            <input type="number" id="BrutoMaandloonFulltime" class="form-control" placeholder="Bruto maandloon fulltime" style="float:left; margin-left:50px;" />

                            <select class="btn btn-default selectpicker" style="float:left; margin-left:50px;">
                                <option selected>Kies uw doelgroep</option>
                                <option>Werknemers < 25 jaar laag geschoold</option>
                                <option>Werknemers < 25 jaar midden geschoold</option>
                                <option>Werknemers > 59 jaar</option>
                                <option>Ander</option>
                            </select>
                        </div>

                        <div class="invulveldjes2" style="width:100%; height:100px; float:left; padding-left: 20%;">
                            <select class="btn btn-default selectpicker" style="float:left; margin-left: 50px;">
                                <option selected>Vlaamse ondersteuningspremie</option>
                                <option>40%</option>
                                <option>30%</option>
                                <option>20%</option>
                                <option>0%</option>
                            </select>

                            <input type="number" id="aantalMaandenIBO" class="form-control" placeholder="Aantal maanden" style="float:left; margin-left: 50px;" />
                            <input type="number" id="productiviteitsPremie" class="form-control" placeholder="Totale Premie" style="float:left; margin-left: 50px;" />
                        </div>

                    </div>
                    <button class="btn btn-primary btn-lg text-center">Voeg Toe</button>
                    <button class="btn btn-primary btn-lg text-center">Annuleer</button>

                </div>
                @*<button class="btn btn-primary btn-lg text-center">Volgende</button>*@
                <a asp-controller="Analyse" asp-action="AnalyseKost2" class="btn btn-primary btn-lg">Volgende</a>

            </div>
        </div>
    </div>