@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.AnalyseViewModels.BestaandeWerkgeverZoekenViewModel

<link rel="stylesheet" href="~/css/BestaandeWerkgever.css" />




<form asp-controller="Analyse" asp-action="BestaandeWerkgever" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <select id="zoekKeuze" name="zoekKeuze">
        <option value="1">Organisatie naam</option>
        <option value="2">Gemeente</option>
        <option value="3">Postcode</option>
        <option value="4">Contactpersoon naam</option>
    </select>

    <div class="form-group">
        <label asp-for="ZoekString" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ZoekString" placeholder="Zoeken" class="form-control" />
            <span asp-validation-for="ZoekString" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Zoek</button>
        </div>
    </div>
</form>

@if (Model.HeeftAlGezocht)
{
    if (Model.IsLegeLijst)
    {
        <p>er zijn geen werkgevers gevonden die voldoen aan uw zoekterm.</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>Organisatie naam</th>
                <th>Straat</th>
                <th>Postcode</th>
                <th>Gemeente</th>
                <th>Afdeling</th>
                <th>Contact persoon</th>
            </tr>
            @foreach (var item in Model.Werkgevers)
            {
                <tr class="klikbaar" onclick="location.href = '@(Url.Action("NieuweWerkgever", "Analyse", new { Id = item.WerkgeverId }))'">
                    <td>@item.Naam</td>
                    <td>@item.Straat</td>
                    <td>@item.Postcode</td>
                    <td>@item.Gemeente</td>
                    <td>@item.NaamAfdeling</td>
                    <td>@item.ContactPersoonNaam</td>
                </tr>
            }
        </table>
    }

}
else
{
    <p>selecteer waarop u wilt zoeken, en geef een uw zoek-term in, en uw werknemers die hieraan voldoen zullen tevoorschijn komen. Indien u zoekt zonder tekst in te geven krijgt u al uw werkgevers te zien.</p>
}