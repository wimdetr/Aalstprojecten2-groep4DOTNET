@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.AnalyseViewModels.BestaandeWerkgeverZoekenViewModel

<link rel="stylesheet" href="~/css/StyleSheet.css" />
<link rel="stylesheet" href="~/css/Baat1.css" />
<link rel="stylesheet" href="~/css/BestaandeWerkgever.css" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/js/BestaandeWerkgeverZoeken.js"></script>

@{
    ViewData["Title"] = "Kairos";
}


<div class="row">
    <h2 class="kleinePaddingLinks">Nieuwe Analyse - Bestaande werkgever</h2>
    <hr />
</div>
<h3>Welke werkgever/organisatie wilt u zoeken?</h3>

<div class="col-lg-12">

    <div class="form-group col-lg-4">
        <label class="col-md-2">Zoeken</label>

        <input id="zoekInput" placeholder="Zoeken" class="form-control" />
    </div>
</div>

@if (Model.IsLegeLijst)
{
    <p>Sorry, er zijn geen werkgevers gevonden die voldoen aan uw zoekterm.</p>
}
else
{
    <table class="table table-striped table-hover text-left test">
        <thead class="achtergrondKleurVanDeTabelHeader">
            <tr>
                <th>Organisatie naam</th>
            </tr>
        </thead>
        @foreach (var item in Model.Werkgevers)
        {
            <tr class="klikbaar filteredRow" onclick="location.href = '@(Url.Action("NieuweWerkgever", "Analyse", new { Id = item.WerkgeverId }))'">
                <td>@item.Naam</td>
            </tr>
        }
    </table>
}