@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.Home.ProfielAanpassenViewModel


@{
    ViewData["Title"] = "Profiel";
}
<link rel="stylesheet" href="~/css/ProfielAanpassen.css" />
<h2 class="text-center">Profiel Aanpassen</h2>
<hr />

<form asp-controller="Home" asp-action="ProfielAanpassen" method="post">

    <div class="row col-md-offset-2 col-md-8 col-lg-6 col-lg-offset-3 col-sm-10 col-sm-offset-1 divOpmaak divBorder">

        <div class="logo">
            <img src="~/images/login/login foto.png" class="breddtefixen" />
        </div>
        <div asp-validation-summary="All"></div>


        <div class="col-md-12 col-sm-12 col-lg-10 col-lg-offset-1 col-sm-offset-0 col-md-offset-0">
            <input asp-for="Email" type="hidden" />
            <label asp-for="Email" class="col-md-12 col-sm-12 col-lg-12 text-left"></label>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    <input value="@Model.Email" class="form-control" disabled />
                </div>
            </div>

            <label asp-for="NaamBedrijf" class="col-md-12 col-sm-12 text-left"></label>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                    <input asp-for="NaamBedrijf" value="@Model.NaamBedrijf" class="form-control" />
                </div>
            </div>


            <div class="col-sm-12 verwijderPaddingLinks verwijderPaddingRechts">
                <div class="col-sm-6 verwijderPaddingLinks verwijderPaddingRechts">
                    <label asp-for="Voornaam" class="col-md-12 col-sm-12 text-left verwijderPaddingRechts"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingRechts">
                        <div class="form-group">
                            <input asp-for="Voornaam" value="@Model.Voornaam" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 verwijderPaddingRechts">
                    <label asp-for="Naam" class="col-md-12 col-sm-12 text-left verwijderPaddingRechts"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingLinks">
                        <div class="form-group">
                            <input asp-for="Naam" value="@Model.Naam" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>



            <div class="col-sm-12">
                <div class="col-sm-6 verwijderPaddingLinks verwijderPaddingRechts">
                    <label asp-for="Straat" class="col-md-12 col-sm-12 text-left verwijderPaddingLinks verwijderPaddingRechts"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingLinks verwijderPaddingRechts">
                        <div class="form-group">
                            <input asp-for="Straat" value="@Model.Straat" id="route" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 verwijderPaddingRechts">
                    <label asp-for="Gemeente" class="col-md-12 col-sm-12 text-left verwijderPaddingLinks verwijderPaddingRechts"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingLinks verwijderPaddingRechts">
                        <div class="form-group">
                            <input asp-for="Gemeente" value="@Model.Gemeente" id="locality" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

        </div>



        <div class="col-md-12 col-sm-12 col-lg-10 col-lg-offset-1 col-sm-offset-0 col-md-offset-0">
            


            <div class="col-md-12 col-sm-12 verwijderPaddingLinks verwijderPaddingRechts">
                <div class="col-md-4 col-sm-4 verwijderPaddingRechts">
                    <label asp-for="Nummer" class="col-md-12 col-sm-12 text-left verwijderPaddingLinks"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingLinks">
                        <div class="form-group">
                            <input asp-for="Nummer" value="@Model.Nummer" id="street_number" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 verwijderPaddingRechts">
                    <label asp-for="Bus" class="col-md-12 col-sm-12 text-left verwijderPaddingRechts verwijderPaddingLinks"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12 verwijderPaddingRechts verwijderPaddingLinks">
                        <div class="form-group">
                            <input asp-for="Bus" value="@Model.Bus" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-md-5 col-sm-5 verwijderPaddingRechts">
                    <label asp-for="Postcode" class="col-md-12 text-left"></label>
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            <input asp-for="Postcode" value="@Model.Postcode" id="postal_code" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="btn-group col-md-12 col-sm-12 col-lg-10 col-lg-offset-1 col-sm-offset-0 col-md-offset-0 margins" role="group">
            <button type="submit" class="btn btn-primary col-md-6 col-sm-6 col-lg-6 btn-lg marginBenedenKlein groeneKnop">Wijzigingen opslaan</button>
            <button type="submit" formaction="ProfielAanpassenDoorgaanZonderOpslaan" class="btn btn-danger btn-lg col-md-6 col-lg-6 col-sm-6 marginBenedenGroot">Wachtwoord aanpassen</button>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px;">
            <div class="col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg col-md-12 col-sm-12 col-lg-12 groeneKnop">Keer terug</a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    <script src="~/js/AutoComplete.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAHogrgooACi21TbM_0F_uSU2vbJAYai24&libraries=places&callback=initAutocomplete" async defer></script>
}