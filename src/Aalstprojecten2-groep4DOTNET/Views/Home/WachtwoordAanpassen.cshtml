@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.Home.WachtwoordAanpassenViewModel

@{
    ViewData["Title"] = "Profiel";
}

<link rel="stylesheet" href="~/css/ProfielAanpassen.css" />

<h2 class="text-center ">Wachtwoord Aanpassen</h2>
<hr class="marginBenedenMidden" />
<div class="row customRij divOpmaak divBorder text-center marginBenedenGrootMaarNietZoGrootAlsMarginBenedenMiddenDitMetOnzeExcuses_Pardon">

    <form asp-controller="Home" asp-action="WachtwoordAanpassen" method="post" class="form-horizontal text-center">
        
        <div class="logo">
            <img src="~/images/login/login foto.png" class="breddtefixen" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group colmd col-md-12 verwijderPaddingRechts">
            <label asp-for="OldPassword" class="col-md-12 text-left"></label>
            <div class="col-md-12 verwijderPaddingRechts">
                <input asp-for="OldPassword" class="form-control text-left" placeholder="Oud Wachtwoord" />
            </div>
        </div>
        <div class="form-group col-md-12 verwijderPaddingRechts">
            <label asp-for="Password" class="col-md-12 text-left"></label>
            <div class="col-md-12 verwijderPaddingRechts">
                <input asp-for="Password" class="form-control text-left" placeholder="Nieuw Wachtwoord" />
            </div>
        </div>
        <div class="form-group col-md-12 verwijderPaddingRechts">
            <label asp-for="ConfirmPassword" class="col-md-12 text-left"></label>
            <div class="col-md-12 verwijderPaddingRechts">
                <input asp-for="ConfirmPassword" class="form-control text-left" placeholder="Bevestig Nieuw Wachtwoord" />
            </div>
        </div>


        <div class="btn-group col-md-12 margins" role="group">
            <button type="submit" class="btn btn-primary col-md-6 btn-lg marginBenedenKlein groeneKnop">Opslaan</button>
            <a asp-controller="Home" asp-action="ProfielAanpassen" class="btn btn-danger btn-lg col-md-6 marginBenedenGroot">Annuleer</a>
        </div>
    </form>
</div>