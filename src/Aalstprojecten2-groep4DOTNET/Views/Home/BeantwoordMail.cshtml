@model Aalstprojecten2_groep4DOTNET.Models.ViewModels.Home.BeantwoordMailViewModel


<form asp-controller="Home" asp-action="BeantwoordMail" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="AdminMail" type="hidden"/>
    <div class="form-group">
        <label asp-for="Onderwerp" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Onderwerp" class="form-control" />
            <span asp-validation-for="Onderwerp" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Inhoud" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Inhoud" class="form-control"></textarea>
            <span asp-validation-for="Inhoud" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Verzenden</button>
        </div>
    </div>
</form>

